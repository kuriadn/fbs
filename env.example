# =============================================================================
# FBS App Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Django Secret Key (CHANGE IN PRODUCTION!)
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this

# Debug Mode (False in production)
DJANGO_DEBUG=True

# Allowed Hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Engine (postgresql, mysql, sqlite3)
DB_ENGINE=django.db.backends.postgresql

# Database Name (FBS System Database)
DB_NAME=fbs_system_db

# Database User
DB_USER=odoo

# Database Password
DB_PASSWORD=your_secure_database_password_here

# Database Host
DB_HOST=localhost

# Database Port
DB_PORT=5432

# =============================================================================
# LICENSING DATABASE CONFIGURATION
# =============================================================================

# Licensing Database Name
LIC_DB_NAME=lic_system_db

# Licensing Database User (can use same as main DB)
LIC_DB_USER=odoo

# Licensing Database Password (can use same as main DB)
LIC_DB_PASSWORD=your_secure_database_password_here

# Licensing Database Host (can use same as main DB)
LIC_DB_HOST=localhost

# Licensing Database Port (can use same as main DB)
LIC_DB_PORT=5432

# =============================================================================
# FBS APP DATABASE CONFIGURATION
# =============================================================================

# FBS Database Engine (can override main DB_ENGINE)
FBS_DB_ENGINE=django.db.backends.postgresql

# FBS Database Host
FBS_DB_HOST=localhost

# FBS Database Port
FBS_DB_PORT=5432

# FBS Database User
FBS_DB_USER=odoo

# FBS Database Password
FBS_DB_PASSWORD=your_secure_fbs_database_password_here

# Use SQLite for development (faster setup)
FBS_USE_SQLITE=False

# =============================================================================
# ODOO INTEGRATION
# =============================================================================

# Odoo Base URL
ODOO_BASE_URL=http://localhost:8069

# Odoo Database Credentials (REQUIRED - NO HARDCODED DEFAULTS)
ODOO_DATABASE_USER=odoo
ODOO_DATABASE_PASSWORD=your_secure_odoo_password_here

# Odoo Request Timeout (seconds)
ODOO_TIMEOUT=30

# Odoo Max Retries
ODOO_MAX_RETRIES=3

# =============================================================================
# FBS AUTHENTICATION
# =============================================================================

# Enable Handshake Authentication
FBS_ENABLE_HANDSHAKE_AUTH=True

# Enable Token Authentication
FBS_ENABLE_TOKEN_AUTH=True

# Handshake Expiry Hours
FBS_HANDSHAKE_EXPIRY_HOURS=24

# Request Rate Limit (requests per hour)
FBS_REQUEST_RATE_LIMIT=1000

# Request Burst Limit (requests per minute)
FBS_REQUEST_BURST_LIMIT=100

# =============================================================================
# FBS FEATURES
# =============================================================================

# License Type (trial, basic, professional, enterprise)
FBS_LICENSE_TYPE=trial

# Trial Duration (days)
FBS_TRIAL_DAYS=30

# Feature Overrides (can override license-based features)
FBS_ENABLE_MSME_FEATURES=True
FBS_ENABLE_BI_FEATURES=False
FBS_ENABLE_WORKFLOW_FEATURES=True
FBS_ENABLE_COMPLIANCE_FEATURES=False
FBS_ENABLE_ACCOUNTING_FEATURES=False
FBS_ENABLE_NOTIFICATION_FEATURES=True
FBS_ENABLE_ONBOARDING_FEATURES=True
FBS_ENABLE_FIELD_FEATURES=True
FBS_ENABLE_CACHE_FEATURES=True

# License Service Configuration
FBS_PREFER_EXTERNAL_LICENSE=False
FBS_FALLBACK_TO_EMBEDDED=True
FBS_FORCE_EMBEDDED_LICENSE=False

# =============================================================================
# EXTERNAL LICENSE SERVICE (Optional)
# =============================================================================

# External License Service URL
# FBS_LICENSE_API_URL=https://license.fayvad.com/api/v1

# External License Service API Key
# FBS_LICENSE_API_KEY=your_external_license_api_key_here

# External License Service Timeout (seconds)
# FBS_LICENSE_TIMEOUT=5

# External License Service Retry Attempts
# FBS_LICENSE_RETRY_ATTEMPTS=3

# External License Service Retry Delay (seconds)
# FBS_LICENSE_RETRY_DELAY=1
# =============================================================================

# Enable MSME Features
FBS_ENABLE_MSME_FEATURES=True

# Enable Business Intelligence Features
FBS_ENABLE_BI_FEATURES=True

# Enable Workflow Features
FBS_ENABLE_WORKFLOW_FEATURES=True

# Enable Compliance Features
FBS_ENABLE_COMPLIANCE_FEATURES=True

# Enable Accounting Features
FBS_ENABLE_ACCOUNTING_FEATURES=True

# Default MSME Template
FBS_DEFAULT_MSME_TEMPLATE=standard

# Auto Install Modules
FBS_AUTO_INSTALL_MODULES=True

# Enable Auto Discovery
FBS_ENABLE_AUTO_DISCOVERY=True

# =============================================================================
# FBS LOGGING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
FBS_LOG_LEVEL=INFO

# Log Requests
FBS_LOG_REQUESTS=True

# Log Responses
FBS_LOG_RESPONSES=False

# =============================================================================
# FBS CACHING
# =============================================================================

# Enable Caching
FBS_CACHE_ENABLED=True

# Cache Timeout (seconds)
FBS_CACHE_TIMEOUT=300

# Redis URL
FBS_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# FBS SECURITY
# =============================================================================

# Allow CORS
FBS_ALLOW_CORS=True

# CORS Origins (comma-separated, * for all)
FBS_CORS_ORIGINS=*

# CSRF Trusted Origins (comma-separated)
FBS_CSRF_TRUSTED_ORIGINS=

# =============================================================================
# FBS URL CONFIGURATION
# =============================================================================

# FBS URL Prefix
FBS_URL_PREFIX=fbs/

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production CORS Origins (comma-separated)
# FBS_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production CSRF Trusted Origins (comma-separated)
# FBS_CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# SOLUTION-SPECIFIC DATABASE CONFIGURATION
# =============================================================================

# Solution databases are created by the solution implementation, not by FBS apps
# The solution will create its own databases (djo_{solution}_db, fbs_{solution}_db)
# and add them to Django settings when implementing the solution

# FBS apps only need to know the solution name to route to the correct database
# No database creation or configuration needed in FBS apps

# =============================================================================
# ISOLATION ARCHITECTURE SETTINGS
# =============================================================================

# Enable solution-specific database routing (when solution databases exist)
FBS_ENABLE_SOLUTION_ISOLATION=True

# Database naming conventions (used by solution implementation)
FBS_DJO_DB_PREFIX=djo_
FBS_FBS_DB_PREFIX=fbs_
FBS_DB_SUFFIX=_db
