# FBS Git Installation Environment Variables
# Copy this file to .env and customize the values

# =============================================================================
# FBS GIT CONFIGURATION
# =============================================================================
# Repository to install FBS from
FBS_REPO=https://github.com/fayvad/fbs.git

# Branch to install from (main, develop, feature-branch, etc.)
FBS_BRANCH=main

# Installation mode: install, editable, or clone
FBS_INSTALL_MODE=install

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=fbs_system_db
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password_here
DB_PORT=5432

# =============================================================================
# ODOO CONFIGURATION
# =============================================================================
ODOO_BASE_URL=http://odoo:8069
ODOO_DATABASE_USER=odoo
ODOO_DATABASE_PASSWORD=your_secure_odoo_password_here

# =============================================================================
# FBS FEATURE FLAGS
# =============================================================================
FBS_ENABLE_MSME_FEATURES=true
FBS_ENABLE_BI_FEATURES=true
FBS_ENABLE_WORKFLOW_FEATURES=true
FBS_ENABLE_COMPLIANCE_FEATURES=true
FBS_ENABLE_ACCOUNTING_FEATURES=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# NGINX CONFIGURATION (Optional)
# =============================================================================
NGINX_ENABLE_SSL=false
NGINX_SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
NGINX_SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
DJANGO_WORKERS=4
DJANGO_THREADS=2
CACHE_TIMEOUT=300

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=false
ENABLE_APM=false
