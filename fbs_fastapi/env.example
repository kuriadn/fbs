# FBS FastAPI Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=FBS - Fayvad Business Suite
APP_VERSION=3.1.1
DEBUG=false
SECRET_KEY=your-super-secret-key-here-change-in-production

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DATABASE_URL=postgresql+asyncpg://odoo:four@One2@localhost:5432/fbs_system_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# ============================================================================
# ODOO INTEGRATION SETTINGS
# ============================================================================
ODOO_BASE_URL=http://localhost:8069
ODOO_TIMEOUT=30
ODOO_MAX_RETRIES=3
ODOO_USER=odoo
ODOO_PASSWORD=

# ============================================================================
# AUTHENTICATION SETTINGS
# ============================================================================
TOKEN_EXPIRY_HOURS=24
HANDSHAKE_EXPIRY_HOURS=24
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=fbs-jwt-secret-key-change-in-production
JWT_EXPIRY_HOURS=24

# ============================================================================
# CACHING SETTINGS
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TIMEOUT=300
CACHE_ENABLED=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_MSME_FEATURES=true
ENABLE_BI_FEATURES=true
ENABLE_WORKFLOW_FEATURES=true
ENABLE_COMPLIANCE_FEATURES=true
ENABLE_DMS_FEATURES=true
ENABLE_LICENSING_FEATURES=true

# ============================================================================
# CORS SETTINGS
# ============================================================================
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
LOG_LEVEL=INFO
LOG_REQUESTS=true
LOG_RESPONSES=false
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,txt,jpg,jpeg,png

# ============================================================================
# BUSINESS LOGIC SETTINGS
# ============================================================================
DEFAULT_SOLUTION_TEMPLATE=standard
AUTO_INSTALL_MODULES=true
ENABLE_AUTO_DISCOVERY=true

# ============================================================================
# RATE LIMITING SETTINGS
# ============================================================================
REQUEST_RATE_LIMIT=1000
REQUEST_BURST_LIMIT=100

# ============================================================================
# MONITORING SETTINGS (Optional)
# ============================================================================
# SENTRY_DSN=https://your-sentry-dsn-here
# SENTRY_ENVIRONMENT=production
